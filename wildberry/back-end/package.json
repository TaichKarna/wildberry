{
  "name": "back-end",
  "version": "1.0.0",
  "description": "This document is aimed at developers contributing to or maintaining the server setup for handling product and customer interactions.",
  "main": "./dist/src/server.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "serve": "node -r dotenv/config dist/src/server.js",
    "build": "npm run clean && tsc",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon -r dotenv/config dist/src/server.js",
    "watch-ts": "tsc -w",
    "clean": "rimraf ./dist",
    "check": "tsc --noEmit",
    "test": "jest --coverage --verbose --forceExit --detectOpenHandles",
    "dev": "nodemon --watch src --ext ts,js,json --exec ts-node src/server.ts",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "npm run lint && prettier \"src/**/*.{ts,js,json,md}\" --check",
    "format:fix": "npm run lint:fix && prettier \"src/**/*.{ts,js,json,md}\" --write",
    "upgrade": "npm update",
    "upgrade-latest": "npx npm-check-updates -u && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@types/pg": "^8.11.11",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.20.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "eslint-config-prettier": "^10.0.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "pg": "^8.13.1",
    "pg-connection-string": "^2.7.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.1"
  }
}
